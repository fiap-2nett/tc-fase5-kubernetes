@using HelpDesk.AppService.Infrastructure.Cluster.Settings
@using Microsoft.Extensions.Options

@inject IOptions<ClusterSettings> Options

@{
    var settings = Options?.Value ?? throw new ArgumentNullException(nameof(Options));

    TempData["appName"] = settings.AppName;
    @* Footer & Misc urls *@
    TempData["hostname"] = settings.Hostname;
    TempData["authorName"] = settings.AuthorName;
    TempData["authorUrl"] = settings.AuthorUrl;
    TempData["swaggerUrl"] = settings.SwaggerUrl;
    TempData["githubUrl"] = settings.ProjectUrl;
    TempData["documentation"] = settings.WikiUrl;
    TempData["observability"] = settings.LogsUrl;
}
